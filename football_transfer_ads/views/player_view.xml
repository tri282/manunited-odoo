<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>


        <record id="football_player_tree_view" model="ir.ui.view">
            <field name="name">football.player.tree</field>
            <field name="model">football.player</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="club"/>
                    <field name="contract_expire"/>
                    <field name="age"/>
                    <field name="market_value"/>

                </tree>
            </field>
        </record>

        <record id="football_player_form_view" model="ir.ui.view">
            <field name="name">football.player.form</field>
            <field name="model">football.player</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <group>
                                <field name="club"/>
                                <field name="contract_expire"/>
                                <field name="age"/>
                            </group>

                            <group>
                                <field name="club"/>
                                <field name="contract_expire"/>
                                <field name="age"/>
                                <field name="market_value"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_player" model="ir.actions.act_window">
            <field name="name">Player</field>
            <field name="res_model">football.player</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="football_player_tree_view" />
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Player to be available on the market
            </field>
    </data>
</odoo>

<odoo>

  <data>

    <record id="res_users_form_view_extended" model="ir.ui.view">

      <field name="name">res.users.form.view.extended</field>
      <field name="model">res.users</field>
      <field name="inherit_id" ref="base.view_users_form"/>
      <field name="arch" type="xml">

        <xpath expr="//notebook/page[@name='preferences']" position="after">

          <page string="Properties">

            <field name="player_ids"/>

              <list create="0" edit="0" delete="0">
                <field name="name"/>
                <field name="club_id"/>
                <field name="position_ids"/>
                <field name="contract_expire" widget="remaining_days"/>
                <field name="age"/>
                <field name="buyer_id"/>
                <field name="market_value" widget="monetary"/>
                <field name="state" widget="badge"/>
              </list>

            </field>

          </page>

        </xpath>

        <field name="name" position="after">
          <field name="club_id"/>
        </field>

      </field>

    </record>

  </data>

</odoo>

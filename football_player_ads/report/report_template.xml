<odoo>

  <data>

    <template id="report_football_player_document">

      <t t-call="web.external_layout">

        <div class="mt-5">

          <div class="page">

            <h2>Player Report</h2>

            <div id="information" class="row mt-4 mb-4">

              <div class="col-auto col-3">
                <strong>Club:</strong>
                <p class="m-0" t-field="o.club_id"/>
              </div>

              <div class="col-auto col-3">
                <strong>Name:</strong>
                <p class="m-0" t-field="o.name"/>
              </div>

              <div class="col-auto col-3">
                <strong>Market Value:</strong>
                <p class="m-0" t-field="o.market_value"/>
              </div>

            </div>
          </div>

        </div>

      </t>

    </template>

    <template id="report_football_player">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
          <t t-call="football_player_ads.report_football_player_document"/>
        </t>
      </t>
    </template>
  </data>
</odoo>

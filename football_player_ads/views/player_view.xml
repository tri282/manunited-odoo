<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <data>

    <record id="action_player_view_stats" model="ir.actions.act_window">

      <field name="name">Player</field>
      <field name="res_model">football.player.stat</field>
      <field name="view_mode">list,form</field>
      <field name="domain">[('player_id', '=', active_id)]</field>

    </record>      

    <record id="football_player_list_view" model="ir.ui.view">

      <field name="name">football.player.list</field>
      <field name="model">football.player</field>
      <field name="type">list</field>
      <field name="arch" type="xml">

        <list>

          <field name="name"/>
          <field name="club_id"/>
          <field name="position_ids"/>
          <field name="contract_expire" widget="remaining_days"/>
          <field name="age"/>
          <field name="buyer_id"/>
          <field name="market_value" widget="monetary"/>
          <field name="state" widget="badge"/>

        </list>
      </field>

    </record>
    
    <record id="football_player_pivot_view" model="ir.ui.view">

      <field name="name">football.player.pivot</field>
      <field name="model">football.player</field>
      <field name="type">pivot</field>
      <field name="arch" type="xml">

        <!--
        Three type of pivot's fields: row, measure, and column
        -->
        <pivot>
          <field name="name" type="row"/>
          <field name="market_value" type="measure" widget="monetary"/>
          <field name="currency_id" invisible="True"/>
          <field name="state" type="col"/>
        </pivot>

      </field>

    </record>

    <record id="football_player_graph_view" model="ir.ui.view">

      <field name="name">football.player.graph</field>
      <field name="model">football.player</field>
      <field name="type">graph</field>
      <field name="arch" type="xml">

        <graph>
          <field name="name"/>
          <field name="market_value" type="measure" widget="monetary"/>
          <field name="currency_id" invisible="True"/>
        </graph>

      </field>

    </record>

    
    <record id="football_player_search_view" model="ir.ui.view">

      <field name="name">football.player.search</field>
      <field name="model">football.player</field>
      <field name="type">search</field>
      <field name="arch" type="xml">

        <search>

          <field name="name"/>
          <field name="club_id"/>
          <field name="position_ids"/>
          <field name="contract_expire" widget="remaining_days"/>
          <field name="age"/>
          <field name="market_value" widget="monetary"/>
          <field name="currency_id" invisible="True"/>
          <field name="state" widget="badge"/>
          <filter string="Available" name="active_state" domain="[('active', '=', True)]"/>
          <separator/>
          <filter string="Unavailable" name="active_state" domain="[('active', '=', False)]"/>
          <separator/>

          <group expand="0" string="Group By">
            <filter string="Status" name="group_by_availability" context="{'group_by': 'active'}"/>
          </group>
          <searchpanel>
            <field name="player_type" icon="fa-filter" groupby="group_by_player_type" limit="0"/>
            <!--Only for categorical variable, e.g. selection -->
          </searchpanel>
        </search>

      </field>

    </record>

    <record id="football_player_kanban_view" model="ir.ui.view">

      <field name="name">football.player.kanban</field>
      <field name="model">football.player</field>
      <field name="arch" type="xml">

        <kanban on_create="edit" quick_create_view="football_player_ads.quick_create_football_player_form_view">
        <!-- make editable by removing default_group_by param -->
          <field name="name"/>
          <field name="club_id"/>
          <field name="position_ids"/>
          <field name="contract_expire" widget="remaining_days"/>
          <field name="age"/>
          <field name="market_value" widget="monetary"/>
          <field name="currency_id" invisible="True"/>

          <templates>

            <t t-name="kanban-box">

              <div class="oe_kanban_details">

                <strong class="o_kanban_record_title">
                  <field name="name"/>
                </strong>

                <div class="o_kanban_tags_section">
                  <field name="position_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                </div>

                <div class="o_kanban_record_bottom">
                  <div class="oe_kanban_bottom_left">
                    <field name="stat_count"/> Stat Count(s)
                  </div>
                </div>

              </div>

            </t>  

          </templates>

        </kanban>

      </field>

    </record>
    
    <record id="quick_create_football_player_form_view" model="ir.ui.view">

      <field name="name">football.player.form</field>
      <field name="model">football.player</field>
      <field name="priority">1000</field>
      <field name="arch" type="xml">
        
        <form>

          <group>
            <field name="name"/>
          </group>
        
        </form>
      
      </field>
    
    </record>
    
    <!--
    # This may only applicable for odoo 15 or prior, odoo 18 requires slightly different syntax
    <record id="football_player_calendar_view" model="ir.ui.view">

      <field name="name">football.player.calendar</field>
      <field name="model">football.player</field>
      <field name="arch" type="xml">

        <calendar date_start="contract_expire" string="Players" mode="month" event_open_pop="true" quick_add="false">

          <field name="name"/> 
          <field name="club_id"/> 
          <field name="contract_expire"/> 

        </calendar>

      </field>

      </record>
    -->
    <record id="football_player_calendar_view" model="ir.ui.view">
      <field name="name">football.player.calendar</field>
      <field name="model">football.player</field>
      <field name="arch" type="xml">
        <calendar
          date_start="contract_expire"
          string="Players"
          color="club_id"
          quick_create="false"
          mode="month"
        >
          <field name="club_id"/>
          <field name="contract_expire"/>
          <field name="name"/>
       </calendar>
      </field>
    </record>


    <record id="football_player_form_view" model="ir.ui.view">

      <field name="name">football.player.form</field>
      <field name="model">football.player</field>
      <field name="arch" type="xml">

        <form string="Player" chatter="mail.thread">

          <header>

            <button name="action_talent" type="object" string="Talent" class="btn btn-primary"/>
            <button name="action_experience" type="object" string="Experience" class="btn btn-danger"/>
            <button name="action_star" type="object" string="Star" class="btn btn-danger"/>
            <button name="action_send_email" type="object" string="Send Email" class="btn btn-danger"/>
            <field name="state" widget="statusbar"/> <!-- Can add statusbar_visible="star, talent" to hide the other fields -->

          </header>

          <sheet>

            <div class="oe_button_box" name="button_box">
              
              <!--
              <button name="action_player_view_stats"
                string="Stat Count"
                type="object"
                class="oe_stat_button"/>
              -->
              
              <button name="action_client_action"
                string="Client Test"
                type="object"
                class="oe_stat_button"/>
              
              <button name="action_url_action"
                string="Big Red Button"
                type="object"
                class="oe_stat_button"/>

            </div>

            <group>

              <field name="name" widget="char_emojis" placeholder="Player Name"/>
              <field name="position_ids" widgets="many2many_tags"/>
            
              <group>
                <field name="state" widget="selection_badge"/>
                <field name="club_id"/>
                <field name="contract_expire"/>
                <field name="age"/>
              </group>

              <group>
                <field name="contract_expire"/>
                <field name="age"/>
                <field name="market_value" widget="monetary"/>   
                <field name="currency_id" invisible="True"/>
              </group>

            </group>
            
            <notebook>

              <page string="Description">

                <group>
                  <field name="description"/>
                  <field name="age"/>
                  <field name="market_value" widget="monetary"/>
                  <field name="contract_expire"/>
                  <field name="currency_id" invisible="True"/>
                  <field name="player_type" widget="radio"/>
                  <field name="suggested_value"/>
                </group>

              </page>

              <page string="Stats"> 

                <field name="stat_ids">

                  <list editable="bottom">
                    <field name="goal"/>
                    <field name="assist"/>
                    <field name="appearance"/>
                    <field name="validity"/>
                    <field name="creation_date"/>
                    <field name="deadline"/>
                    <field name="avg_rating"/>
                    <field name="status" nolabel="1"/>
                    <field name="partner_id"/>
                    <field name="active" widget="boolean_toggle"/>
                  </list>

                </field>

              </page>

              <page string="Other Info">

                <group>
                  <field name="sales_id" widget="many2one_avatar_user"/>
                  <!--<field name="campaign_id"/>
                  <field name="source_id">
                  <field name="medium_id"/> -->
                  <field name="buyer_id"/>
                  <field name="phone" widget="email"/>
                </group>

              </page>

            </notebook>      
            
          </sheet>
          
          <!-- <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="activity_ids" widget="mail_activity"/>
            <field name="message_ids" widget="mail_threads"/>
          </div> -->

        </form>

      </field>

    </record>


    <record id="action_player" model="ir.actions.act_window">

      <field name="name">Player</field>
      <field name="res_model">football.player</field>
      <field name="view_mode">list,pivot,graph,calendar,kanban,form</field>
      <field name="view_id" ref="football_player_list_view"/>

      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
		      Create a Player to be available on the market
	      </p>
      </field>
    </record>     

    <record id="action_custom_client_action" model="ir.actions.client">

      <field name="name">Custom Client action</field>
      <field name="tag">custom_client_action</field>

    </record>    

    <record id="action_extend_stat_deadline" model="ir.actions.server">

      <field name="name">Extend Deadline</field>
      <field name="model_id" ref="football_player_ads.model_football_player_stat"/>
      <field name="state">code</field>
      <field name="binding_model_id" ref="football_player_ads.model_football_player_stat"/>
      <field name="binding_view_types">list,form</field>
      <field name="code">
        action = model.extend_stat_deadline()
      </field>
    </record>    


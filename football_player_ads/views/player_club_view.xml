<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>


        <record id="football_player_club_tree_view" model="ir.ui.view">
            <field name="name">football.player.club.tree</field>
            <field name="model">football.player.club</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="contract_expire"/>
                    <field name="age"/>
                    <field name="market_value"/>

                </tree>
            </field>
        </record>

        <record id="football_player_club_form_view" model="ir.ui.view">
            <field name="name">football.player.club.form</field>
            <field name="model">football.player.club</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_player_club" model="ir.actions.act_window">
            <field name="name">Player Club</field>
            <field name="res_model">football.player.club</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="football_player_club_tree_view" />
        </record>      
    </data>
</odoo>

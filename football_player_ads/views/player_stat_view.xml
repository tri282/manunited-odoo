<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>


        <record id="football_player_stat_list_view" model="ir.ui.view">
            <field name="model">football.player.stat</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="status"/>
                    <field name="partner_id"/>
                    <field name="goal"/>
                    <field name="assist"/>
                    <field name="appearance"/>
                    <field name="avg_rating"/>
                    <field name="personal_rating"/>
                    <field name="creation_date"/>
                </list>
            </field>
        </record>

        <record id="football_player_stat_form_view" model="ir.ui.view">
            <field name="name">football.player.stat.form</field>
            <field name="model">football.player.stat</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                      <group>
                        <group>
                          <field name="name"/>
                          <field name="status"/>
                          <field name="partner_id"/>
                          <field name="goal"/>
                          <field name="assist"/>
                          <field name="appearance"/>
                          <field name="avg_rating"/>
                          <field name="personal_rating"/>
                          <field name="creation_date"/>
                          <field name="partner_phone"/>
                          <field name="partner_email"/>
                        </group>
                      </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_player_stat" model="ir.actions.act_window">
            <field name="name">Player Stat</field>
            <field name="res_model">football.player.stat</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="football_player_stat_list_view" />
        </record>      
    </data>
</odoo>
